<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reservation_item"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/reservation_item_gadget_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Gadget Image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_item_gadget_title"
            android:layout_toRightOf="@id/reservation_item_gadget_image"
            android:layout_toEndOf="@+id/reservation_item_gadget_image"
            android:textSize="30sp"
            android:text="gadgetitle"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_item_waiting_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_item_waiting_pos"
            android:layout_below="@id/reservation_item_gadget_title"
            android:layout_toRightOf="@+id/reservation_item_gadget_image"
            android:layout_toEndOf="@+id/reservation_item_gadget_image"
            android:text="test"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>